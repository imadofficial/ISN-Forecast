      xmlns:local="clr-namespace:ISN_Forecast.Win7.Globe" xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Splash">

